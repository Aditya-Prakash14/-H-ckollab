# Clerk Authentication
# Get this from your Clerk Dashboard: https://dashboard.clerk.com/
REACT_APP_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# API Configuration  
# For development
REACT_APP_API_URL=http://localhost:4000/api

# For production
# REACT_APP_API_URL=https://your-api-domain.com/api

# Development Settings
# Set to false when connecting to real backend API
REACT_APP_USE_MOCK_DATA=false

# Development Authentication Bypass
# Set to true during development if you want to bypass Clerk auth
REACT_APP_USE_DEV_AUTH=true

# Optional: Custom app name for Clerk
REACT_APP_CLERK_APP_NAME=H@ckollab
